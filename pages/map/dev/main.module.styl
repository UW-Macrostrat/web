.feature-panel
  position: relative
  overflow-x: hidden

.key-value
  display: inline-block
  margin-right: 1em
  .key
    font-weight: bold
    font-size: 0.9em
    &:after
      content: ': '
  .value
    font-size: 0.9em

.feature-properties
  position: relative
  &:before
    content: "â€“"
    position: absolute
    top: 4px
    left: 0

.feature-header h3
  margin-bottom: 0
  margin-top: 0.5em

.feature-group
  border-bottom: 1px solid var(--panel-rule-color)
  padding: 0 1em
  margin-left: -1em
  margin-right: -1em
  margin-bottom: 0.5em
  &:last-child
    border-bottom: none

.tile-info
  display flex
  flex-direction: row
  align-items: baseline
  padding 0 1em
  h3
    margin-right: 0.5em    

.opacity-slider
  margin: 0 1em 0.5em
  :global
    .bp5-slider-handle .bp5-slider-label
      background-color: var(--secondary-color)
      color: var(--text-color)

.unit-number
  .unit
    font-size: 0.9em
    margin-left: 0.2em
    font-weight: bold

.page
  margin: 2em auto
  max-width: 50em

.dev-index-page
  overflow-y: scroll