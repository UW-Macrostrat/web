.elevationChart-root
  z-index: 0 !important;
  position: relative !important;
  height: 150px;


.elevation-chart
  -webkit-transition: 0.8s;
  -moz-transition: 0.8s;
  transition: 0.8s;
  position: relative;
  height: 160px;

.elevation-instructions
  padding: 30px;
  text-align: center;

.control-bar
  position: absolute;
  top: 0.25em;
  right: 0.25em;
  display: flex;
  flex-direction: row;

.elevation-focus-text
  fill: var(--text-color);

.elevation-focus-circle
  stroke: var(--panel-secondary-background-color);

.elevation-chart-wrapper
  padding-bottom: 0px;
  :global
    text
      fill: var(--text-color);

    .axis path, .axis line
      fill: none;
      stroke: var(--text-color);
      opacity: 0.2;
      shape-rendering: crispEdges;

    .x.axis path
      display: none

    .line
      fill: none;
      stroke: rgba(75,192,192,1);
      stroke-width: 1.5px;

    .tick line
      opacity: 0.13;

    .tick text
      font-size: 10px;