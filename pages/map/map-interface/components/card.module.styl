.card-header-left button
  margin-right 5px

.card-content
  h2:first-child
    margin-top 0
  overflow-y scroll
  padding 10px
  min-height 0


.spacer
  flex-grow 1
  pointer-events none

.closeable-card
  padding 0
  min-height 40px
  flex-shrink 1
  display flex
  flex-direction: column
  .card-header, .card-header-left
    display: flex
    align-items: center
    .spacer
      flex-grow 0.01
  .card-header-left
    justify-content: flex-start
    flex 1
    min-width: 0
    overflow-x: hidden
  .card-header
    justify-content space-between
    padding 5px
    border-bottom 1px solid var(--panel-rule-color)
    height 40px


@media screen and (max-width: 768px) {
  .closeable-card {
    border-radius: 0px;
  }
}
