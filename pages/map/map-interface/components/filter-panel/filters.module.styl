.admonishments
  position: relative

.admonishment
  margin: 0px 0px
  font-size: 12px
  position: relative
  width: 100%
  padding: 0px 0px
  display: block

  .button-contents
    display: flex
    align-items: center
    justify-content: space-between
    gap: 0.5em
    padding: 0 4px 0 0.5em
    width: 100%

    button
      min-width: 16px
      min-height: 16px

    .spacer
      flex-grow: 1

  .spacer
    flex-grow: 1

  &:global(.bp6-button.bp6-small)
    border-bottom-left-radius: 0
    border-bottom-right-radius: 0
    padding-left: 0
    padding-right: 0
    margin-bottom: 0

.filter-container
  margin-bottom: 5px;

.filter-tag
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin: 5px;


// Should be maybe moved to a card-specific location

.filter-names {
  margin-bottom: 0px;
}

.filter-name-container
  display: flex
  justify-content: space-between
  align-items: center

  & > *
    margin-right: 0.5em
  margin-right: -0.5em


.filters
  padding: 4px 6px;


.filter-tongue-actions {
  display: flex;
  align-items: center;
  margin-left: 15px;
  white-space: nowrap;
}
