transitionable()
  &:global(.enter)
    opacity: 0
  &:global(.enter-active)
    opacity: 1
    transition: opacity 0.5s ease-in-out, height 0.5s ease-in-out, max-height 0.5s ease-in-out
  &:global(.exit)
    opacity: 1
  &:global(.exit-active)
    opacity: 0
    transition: opacity 0.5s ease-in-out, height 0.5s ease-in-out, max-height 0.5s ease-in-out
  transition: height 0.5s ease-in-out, max-height 0.5s ease-in-out

.transition-item
  transitionable()

.loading-area
  .spinner, .data
    transition: height 0.5s ease-in, opacity 0.2s ease-in

  .spinner
    position absolute
    top 0
    left 0
    width: 100%
    height 100%
    min-height: 90px
    background-color: var(--panel-background-color)
    padding: 15px

  &.enter
    .spinner
      height: 0
      opacity: 0

    .data
      opacity: 1

  &.from
    .spinner
      height: 90px
      opacity: 1

    .data
      opacity: 0

  &.leave
    .spinner
      height: 90px
      opacity: 1

    .data
      opacity: 0

