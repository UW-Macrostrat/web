.save-location-container
  border: 1px solid #5c7080
  padding: 1.2em
  margin-bottom: 1.5em
  border-radius: 6px
  font-family: inherit
  font-size: inherit
  color: inherit

  .save-location-form
    display: flex
    flex-direction: column
    gap: 0.5em

  .form-field
    display: flex
    align-items: center
    justify-content: flex-start
    margin-bottom: 0.8em

    label
      font-weight: bold
      color: #ccc
      margin-right: 2px
      width: 120px

    input, textarea, select
      padding: 0.4em
      border: 1px solid #ccc
      border-radius: 4px
      font-size: 1em
      flex-grow: 1
      width: auto
      max-width: 100%

    input
      max-width: 150px

    textarea
      height: 60px
      max-width: 180px

    select
      max-width: 100px
      font-size: 0.9em

  .button-container
    display: flex
    justify-content: center
    align-items: center
    margin-top: 0.5em
    gap: 15px

    .save-btn, .view-locations-btn
      padding: 0.5em 1.2em
      background-color: #5c7080
      color: #fff
      border: none
      border-radius: 4px
      cursor: pointer
      font-size: 1em
      &:hover
        background-color: #394b59

    .view-locations-btn
      margin-right: 0

  // Add more space below the buttons (optional)
  .save-btn, .view-locations-btn
    margin-bottom: 8px
