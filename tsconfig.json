{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": false,
    "esmoduleInterop": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "vike-react"],
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowImportingTsExtensions": true,
    "paths": {
      "~/*": ["./src/*"],
      "#/*": ["./pages/*"]
    }
  },
  "exclude": ["dist"],
  "include": [
    "packages/*/src/**/*",
    "src/**/*",
    "pages/**/*",
    "server/**/*",
    "vite.config.ts"
  ]
}
