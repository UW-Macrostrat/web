{
  "compilerOptions": {
    "baseUrl": "./",
    // Allow importing of JSON and default imports from CommonJS modules
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "paths": {
      // Workspace code
      "@macrostrat-web/*": [
        "packages/*/src"
      ],
      "~/*": [
        "src/*"
      ],
      "#/*": [
        "pages/*"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "src/**/*",
    "pages/**/*"
  ]
}
