{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2020",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~/*": ["./src/*"],
      "@macrostrat/cesium-viewer": ["packages/cesium-viewer/src/"],
      "@macrostrat/cesium-martini": ["packages/cesium-martini"],
      "@macrostrat/ui-components": [
        "ui-components/packages/ui-components/src/"
      ],
      "@macrostrat/column-components": ["packages/column-components/src/"],
      "@macrostrat/map-components": ["packages/map-components/src/"]
    }
  },
  "include": ["src"]
}
