@require "../../ui-components/packages/ui-components/src/shared/colors"

*
  box-sizing border-box

:root
  --accent-color: $light-gray3
  --accent-hover-color: $light-gray1
  --accent-border-color: $gray5
  --accent-secondary-color: #EBF1F5
  --accent-secondary-hover-color: #F5F8FA

body {
  color: #333;
  margin:0;
  padding:0;
  font-family: 'Source Sans Pro', sans-serif;
}
body, .main-container, #react, #app-holder {
  height: 100%;
  width: 100%;
}
::-webkit-scrollbar,
*::-webkit-scrollbar {
  display: none;
}

.map-holder {
  z-index: 1;
  position: absolute;
  top 0
  left 0
  bottom 0
  right 0
  height 100%
}

#map {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
}

.mapboxgl-ctrl-bottom-right {
  z-index: 0;
}
.other-attributes {
  margin-bottom: 50px;
}

.column-icon {
  fill:none;stroke:#231f20;stroke-miterlimit:10;stroke-width:3px;
}
.custom-svg-icon {
  flex-shrink: 0;
  margin-right: 16px;
}
.search-results {
  background-color: #ffffff !important;
}
.search-input {
  border: none;
  font-size: 16px;
  width: 100%;
  margin-left: 10px;
}
.search-input:focus {
  outline: none;
}

.searchresult-header 
  font-size: 1.1em !important;
  font-weight: bold !important;
  lettering-spacing: 2px !important;
  color: #333 !important;
  position: sticky;
  top: 0px;
  background: #fff;
  border-bottom: 2px solid #ddd;
  margin:0;
  width: 100%;
  padding-top: 10px
  padding-bottom: 10px;
  .text
    padding-left: 15px;


.searchresult-item {
  font-size: 0.95em !important;
}

.active-layer {
  font-weight: bold;
}

.overlay {
  fill: none;
  pointer-events: all;
}


.infoDrawer-loading {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.infodrawer-grid {
  /* width: 100% !important; */
  overflow-y: scroll !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.infodrawer-content {
  min-height: 0;
  max-height: 100% !important;
  -webkit-transition: 0.8s;
	-moz-transition: 0.8s;
	transition: 0.8s;
  background-color: #ffffff;
  padding: 20px;
  /* height: 100vh; */
}
.infoDrawer-root {
  z-index: 999999 !important;
  position: relative !important;
}
.infoDrawer {
  /* background-color: rgba(0,0,0,0) !important;
  box-shadow: none !important; */
  overflow-x: hidden !important;
  max-width: 33%;
  top: 0 !important;
}
.infodrawer-header-grid {
  padding-bottom: 0 !important;
  margin-bottom: -20px !important;
}
.infodrawer-header {
  float: right;
  background-color: #ffffff;
}
.infodrawer-header-item {
  display: inline-block;
  font-size: 15px;
}
.lnglat-container {
  margin-right: 15px;
}
.lnglat {
