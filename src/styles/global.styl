}

.searchresult-header
  font-size: 1.1em !important;
  font-weight: bold !important;
  lettering-spacing: 2px !important;
  color: var(--text-color);
  position: sticky;
  top: 0px;
  background: var(--panel-background-color);
  border-bottom: 2px solid var(--panel-rule-color);
  margin: 0;
  width: 100%;
  padding-top: 10px
  padding-bottom: 10px;

  .text
    padding-left: 15px;


.searchresult-item {
  font-size: 0.95em !important;
}

.active-layer {
