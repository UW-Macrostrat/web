
.panel-subhead
  padding 0.2em var(--box-horizontal-padding)
  border-top 1px solid var(--accent-border-color)
  border-bottom 1px solid var(--accent-border-color)
  display flex
  flex-direction row
  position sticky
  align-items: baseline;
  z-index 1
  top 0px
  &>*
    margin-right var(--box-horizontal-padding)
    &:last-child
      margin-right: 0
  h1, h2, h3, h4
    font-family: Montserrat,sans-serif !important;
    font-weight: 700;
    margin 0.2em 0;
  h4
    font-weight 600;
  .title
    flex-grow 1

.expansion-panel
  padding 0
  flex-wrap: wrap;
  margin-top -1px;
  // &.collapsed
  //   .expansion-panel-header
  //     border-bottom-width: 0;
  .panel-subhead
    background-color: var(--accent-color)



.sub-expansion-panel
  margin -1px calc(var(--panel-padding-h) * -0.5) 0;
  overflow: hidden
  &:first-child
    .expansion-panel-header
      border-top-width: 0;
  .panel-subhead
    border-top: none
    border-bottom: none


  .expansion-panel-header
    background-color: var(--tertiary-background);
    cursor pointer
    &:hover
      background-color var(--accent-secondary-hover-color)
    h2, h3, h4
      font-weight: 500
    border-bottom 1px solid var(--tertiary-border-color)
    border-top 1px solid var(--tertiary-border-color)
    margin-top -1px
    padding 5px 1em 5px
    align-items center


.expansion-summary-title-help
  margin-left 5px;
  :global(.bp4-icon)
    margin-left 5px;

.expansion-panel-header
  cursor pointer
  &:hover
    background-color var(--accent-hover-color)
  :global(.bp4-icon)
    transform: translate(0,3px);

.expansion-children
  padding 5px 1em 10px
  .expansion-panel
    margin-left -1em
    margin-right -1em
    &:first-child
      margin-top: -5px

.expansion-panel-subtext
  font-size: 85%;
  font-weight: 400;

:global
  .expansion-panel-root
    padding-left: 15px !important;

  .expansion-panel-detail
    display: block !important;
    padding: 0 !important;

  .expansion-panel-detail-sub
    display: block !important;


// New expandable panel for details
.expandable-details-main
  display flex
  flex-direction row
  align-items: center
  justify-content: space-between
  margin: 3px 0

.expandable-details-header
  display inline-flex
  flex-direction row
  align-items: baseline
  flex-grow 1

.expandable-details-children
  position relative

.expandable-details-toggle
  :global(.bp4-button)
    font-size: 10px

.expandable-details
  &.macrostrat-unit
    .title:after
      content: none;
  .title
    margin-right 1em
    &:after
      content: ":";

.expansion-body
  display: inline-block
  //flex-direction row
  align-items: baseline
  background-color: var(--tertiary-background)
  padding 2px 6px
  border-radius: 4px
  width: 100%
  box-shadow: 0px 1px 2px 1px rgba(0,0,0,0.2)
  margin-bottom 6px

.expansion-panel-detail-header
  font-size: 90%;
  font-style italic
  margin-right: 1em
  display inline
  color: var(--secondary-color)
  &:after
    content: ":";

.expansion-panel-detail-body
  display inline