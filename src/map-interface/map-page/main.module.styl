/*
This stylesheet the overall application page layout.
*/

.map-page
  height 100vh
  width 100vw
  /* mobile viewport bug fix */
  max-height: -webkit-fill-available;
  display flex
  flex-direction column
  position relative

  // Compass display
  .compass-control
    display: none
  &.map-is-rotated
    .compass-control
      display: block
  
  .map-3d-control
    display: none
  &.map-3d-available .map-3d-control
    display: block
  &.map-is-rotated.map-3d-available .map-3d-control
    display: none

  .globe-control
    svg
      color: var(--secondary-color)
    display: none
  &.map-is-global .globe-control
    display: block

.main-ui
  flex 1
  position: relative
  display flex
  flex-direction: column
  max-height 100%
  height: 100%

.panel-card
  padding: 10px
  >:last-child
    margin-bottom: 0

.context-stack
  display: flex
  flex-direction: column
  max-height: 100%
  &>div
    flex-shrink 1
  &>.searchbar
    flex 0

// Rename left-stack to context-stack

.context-stack, .detail-stack
  z-index: 100

.panel-container
  display flex
  flex-direction: column
  &>div
    pointer-events all

.panel-title
  font-size 16px

.spacer
  flex-grow 1
  pointer-events: none

.map-view-container
  flex-grow 1
  position relative

.searchbar-holder
  margin-bottom 0.5em

.map-dev-page
  flex-direction: row
  .detail-stack
    width: 24em

.right-panel
  width: 24em

// Menu
.buttons
  display: flex
  flex-direction: row
  flex: 1
  min-width: 0

.tab-button
  flex-shrink: 1
  min-width: 40px
  overflow: hidden
  text-align: right
  :global(.bp4-button-text)
    transition all 0.2s
    transition-delay 0.1s

.menu-card.narrow-card
  // Transition opacity when leaving context panel
  .panel-header:not(.minimal)
    // .tab-button
    //   &:not(:hover) :global(.bp4-button-text)
    //     //width 0
    //     opacity: 1
        //margin-left: -7px
    // Fancy CSS to select all buttons _after_ the currently hovered one
    .tab-button:global(.bp4-active) ~ .tab-button :global(.bp4-button-text)
        width 0
        opacity: 0
        margin-left: -7px

// When panel is closing, fade out the buttons text-first
.context-panel-leave .menu-card .panel-header
  .tab-button :global(.bp4-button-text)
    opacity: 0
    width: 0

.narrow-card.narrow-enter .panel-header .buttons
  // When we have not yet transitioned to a "minimal" state, we need extra space
  // to not crowd buttons that haven't yet transitioned
  margin-right: -500px

.panel-header.minimal
  .tab-button:not(:hover)
    &:not(:global(.bp4-active))
      padding-left: 0
      padding-right: 0
      min-width: 30px
      width: 30px
    :global(.bp4-button-text)
      width 0
      opacity: 0
      margin-left: -7px

.menu-group
  margin-bottom: 0.5em
  margin-top: 0.2em


.menu-card
  :global
    .bp4-text, .text-panel
      ul
        padding-left: 1em

.menu-content
  display flex
  flex-direction column
  .bp4-button-group
    margin-bottom 4px
  margin-bottom -8px

  hr
    width 100%

// Map controls
map-control()
  min-width: 22px
  min-height: 22px 
  border-radius: 4px
  background-color: var(--panel-background-color)
  box-shadow 0 0 0 1px var(--card-shadow-color)
  //box-shadow: 0 0 0 1px rgba(16, 22, 26, 0.1), 0 0 0 rgba(16, 22, 26, 0), 0 1px 1px rgba(16, 22, 26, 0.2) !important
  //box-shadow: 0 0 0 2px rgba(0,0,0,.1)
  button
    width: 22px
    height: 22px
    background-position: center center
    padding 0
    background-color: var(--panel-background-color)
    color: var(--text-color)

    &:hover
      background-color: var(--panel-background-color) !important


:global

  #map
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;

    .mapbox-compass, .mapbox-3d
      display: none

  .mapboxgl-ctrl.mapbox-3d.mapbox-control
    width: unset
    button
      width: unset
      padding-inline 4px

  .mapboxgl-canvas-container
    width: 100%
    height: 100%

  .mapboxgl-ctrl.mapboxgl-ctrl-attrib
    a
      color: var(--text-color)
    background-color: var(--translucent-panel-background-color) !important


  .mapboxgl-marker svg
    path
      fill: var(--panel-background-color) !important
    circle
      fill: var(--secondary-color) !important
    

  .mapbox-control.mapbox-zoom
    background: var(--translucent-panel-background-color)
    svg
      fill: var(--text-color) !important

  .mapboxgl-ctrl-logo
    transform: scale(0.9)translate(-8px,2px)
  .bp4-dark
    .mapboxgl-ctrl-logo
      filter: invert(100%)



  .mapboxgl-ctrl-group button + button
    border-top: 1px solid var(--panel-rule-color) !important

  .bp4-dark .mapboxgl-ctrl-group .mapboxgl-ctrl-icon
    filter: invert(40%)
    &:hover
      filter: invert(50%)
    //background-color: var(--)

  .mapboxgl-ctrl-geolocate .mapboxgl-ctrl-icon
    filter: invert(40%)
    &:hover
      filter: invert(50%)


.detail-stack
  position relative

.main-ui.detail-panel-open
  .zoom-control
    opacity: 0
    display none

.zoom-control
  transition opacity 1s ease-in-out
  width: 30px
  position absolute
  top 0
  right 0

.main-ui.searching
  .map-view-container
    pointer-events: none

.map-controls
  display flex
  flex-direction row
  justify-content: right
  margin-bottom: 0
  &>*
    margin-left: 0.5em
  :global(.mapbox-control), :global(.map-control-wrapper), .map-control
    map-control()

  .map-scale-control
    background: none
    box-shadow: none
    padding-top: 8px
    :global(.mapboxgl-ctrl-scale)
      background-color: var(--translucent-panel-background-color)
      border-color: var(--secondary-text-color)
      color: var(--secondary-text-color)

